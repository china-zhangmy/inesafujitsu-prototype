<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.inesafujitsu.prototype.persist.mapper.impl.MaskMapper">
    <resultMap id="resultMap" type="Mask">
        <id column="m_id" property="id" javaType="String"/>
        <result column="m_name" property="name" javaType="String"/>
        <result column="m_curr_idx" property="currIdx" javaType="Integer"/>
        <result column="m_create_date" property="createDate" javaType="Date"/>
        <result column="m_create_user" property="createUser" javaType="String"/>
        <result column="m_update_date" property="updateDate" javaType="Date"/>
        <result column="m_update_user" property="updateUser" javaType="String"/>
        <result column="m_lock_date" property="lockDate" javaType="Date"/>
        <result column="m_lock_user" property="lockUser" javaType="String"/>
        <result column="m_rf_id" property="rfId" javaType="String"/>

        <collection property="histories" ofType="MaskHistory">
            <id column="h_id" property="id" javaType="String"/>
            <result column="h_idx" property="idx" javaType="Integer"/>
            <result column="h_create_date" property="createDate" javaType="Date"/>
            <result column="h_create_user" property="createUser" javaType="String"/>
            <result column="h_note" property="note" javaType="String"/>
        </collection>
    </resultMap>

    <sql id="columnList4MasterWithPrefix">
        m.id AS m_id,
        m.name AS m_name,
        m.curr_idx AS m_curr_idx,
        m.create_date AS m_create_date,
        m.create_user AS m_create_user,
        m.update_date AS m_update_date,
        m.update_user AS m_update_user,
        m.lock_date AS m_lock_date,
        m.lock_user AS m_lock_user,
        m.rf_id AS m_rf_id
    </sql>

    <sql id="columnList4HistoryWithPrefix">
        h.id AS h_id,
        h.idx AS h_idx,
        h.create_date AS h_create_date,
        h.create_user AS h_create_user,
        h.note AS h_note
    </sql>

    <select id="getAll" resultMap="resultMap">
        SELECT
        <include refid="columnList4MasterWithPrefix"/>
        FROM m_mask m
        ORDER BY m.update_date DESC, m.create_date DESC
    </select>

    <select id="getOne" parameterType="String" resultMap="resultMap">
        SELECT
        <include refid="columnList4MasterWithPrefix"/>
        ,
        <include refid="columnList4HistoryWithPrefix"/>
        FROM m_mask m, h_mask h
        WHERE m.id = h.master_id
        AND m.id = #{id}
        ORDER BY h.create_date
    </select>

    <insert id="insert" parameterType="Mask">
       INSERT INTO m_mask (id, name, curr_idx, create_date, create_user, rf_id)
       	VALUES (#{id}, #{name}, #{currIdx}, #{createDate}, #{createUser}, #{rfId})
    </insert>

    <update id="update" parameterType="Mask">
        UPDATE m_mask
        <set>
            <if test="currIdx != null">curr_idx = #{currIdx},</if>
            <if test="updateDate != null">update_date = #{updateDate},</if>
            <if test="updateUser != null">update_user = #{updateUser},</if>
            <if test="rfId != null">rf_id = #{rfId},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="lock">
        UPDATE m_mask
        SET lock_date = #{lockDate}, lock_user = #{lockUser}
        WHERE id = #{id}
    </update>

    <update id="unlock">
        UPDATE m_mask
        SET lock_date = NULL, lock_user = NULL
        WHERE id = #{id}
    </update>

    <update id="delete">
        DELETE m_mask
        WHERE id = #{id}
    </update>

</mapper>