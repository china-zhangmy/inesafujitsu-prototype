<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.inesafujitsu.prototype.persist.mapper.impl.DynamicMapper">

    <select id="getAll" resultType="Map">
        SELECT * FROM ${table}
        <where>
            <if test="conditions != null">
                <foreach item="value" index="key" collection="conditions" separator=" and ">
                    ${key} = #{value}
                </foreach>
            </if>
        </where>
    </select>

    <insert id="insert">
        INSERT INTO ${table}
        <foreach item="column" index="index" collection="columns"
                 open="(" separator="," close=")">
            ${column}
        </foreach>
        VALUES
        <foreach item="value" index="index" collection="values"
                 open="(" separator="," close=")">
            #{value}
        </foreach>
    </insert>

</mapper>